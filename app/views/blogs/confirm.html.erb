<div class ="container">
    <h3>以下の内容で、送信する。</h3>

<%= form_with(model: @blog, url: blogs_path, local: true) do |form| %>
  <%= form.hidden_field :title %>
  <%= form.hidden_field :content %>

   <div class="wrapper">
      <p>タイトル:<%= @blog.title %></p>
      <p>本文:<%= @blog.content %></p>
      <!-- 確認画面でアップロードした画像を表示させるための記述 -->
      <%= image_tag(@blog.image) %>
      <%= form.hidden_field :image_cache %>
      <% end %>

  <%= form_with(model: @blog, url: new_blog_path, local: true, method: 'get') do |form| %>
    <%= form.hidden_field :title %>
    <%= form.hidden_field :content %>
    <%= form.hidden_field :image_cache %>
    <%= form.submit  "登録する" ,class: 'btn btn-info'%>
    <%= form.submit "もどる", name: 'back', class: 'btn btn-info' %>
  <% end %>
  
  </div>
</div>
