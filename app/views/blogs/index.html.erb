<div class="container">

   <div class="contents">
     <h1>DailyBlog</hi>
       <p><%= notice %></p>

   <% @blogs.each do |blog| %>
    <ul class = 'row'>
        <li class = "col-sm-6 col-md-6 test" >タイトル:<%= blog.title %></li>
        <li class = "col-sm-6 col-md-6 test">内容:<%= blog.content %></li>
    </ul>
        <%= link_to 'ブログを確認する', blog_path(blog.id), class: 'btn btn-info' %>
    <% if blog.user_id == current_user.id %>
        <%= link_to 'ブログを編集する', edit_blog_path(blog.id), class: 'btn btn-info' %>
        <%= link_to 'ブログを削除する', blog_path(blog.id), method: :delete ,data: { confirm: '本当に削除してよろしいですか'}, class: 'btn btn-info' %>
    <% end %>
    <% end %>
</div>
</div>
